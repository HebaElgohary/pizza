generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  img         String
  order       Int
  basePrice   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sizes       Size[]
  extras      Extra[]
}

model Size {
  id          String       @id @default(cuid())
  name        ProductSizes
  price       Float
  productSize Product      @relation(fields: [productId], references: [id])
  productId   String
    @@unique([productId, name])

}

enum ProductSizes {
  SMALL
  MEDUIM
  LARGE
}

enum ProductExtras {
  CHEESE
  ONION
  POTATO
}

model Extra {
  id        String        @id @default(cuid())
  name      ProductExtras
  price     Float
  productExtra   Product    @relation(fields: [productId], references: [id])
  productId String
  @@unique([name,productId])
}
